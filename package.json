{
    "name": "system-pc",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "npm run serve",
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "autoprefixer": "^9.8.0",
        "axios": "^0.21.1",
        "babel-plugin-component": "^1.1.1",
        "core-js": "^3.6.5",
        "element-ui": "^2.13.2",
        "mavon-editor": "^2.9.0",
        "qs": "^6.9.4",
        "vue": "^2.6.11",
        "vue-cropperjs": "^4.1.0",
        "vue-i18n": "^8.18.2",
        "vue-quill-editor": "^3.0.6",
        "vue-router": "^3.3.1",
        "vue-schart": "^2.0.0",
        "vuedraggable": "^2.23.2",
        "vuex": "^3.4.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "~4.4.0",
        "@vue/cli-plugin-eslint": "~4.4.0",
        "@vue/cli-plugin-router": "~4.4.0",
        "@vue/cli-plugin-vuex": "~4.4.0",
        "@vue/cli-service": "~4.4.0",
        "babel-eslint": "^10.1.0",
        "compression-webpack-plugin": "^4.0.0",
        "eslint": "^6.7.2",
        "eslint-plugin-vue": "^6.2.2",
        "less": "^3.0.4",
        "less-loader": "^5.0.0",
        "style-resources-loader": "^1.3.3",
        "vue-template-compiler": "^2.6.11"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true,
            "browser": true,
            "commonjs": true,
            "es6": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "parserOptions": {
            "parser": "babel-eslint",
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {
            "no-console": 0,
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                0,
                "error",
                "windows"
            ],
            "quotes": [
                "off",
                "double"
            ],
            "semi": [
                "error",
                "always"
            ],
            "no-mixed-spaces-and-tabs": [
                2,
                "smart-tabs"
            ],
            "no-var": 2
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}
